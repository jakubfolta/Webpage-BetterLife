{
  "name": "webpage-betterlife",
  "version": "1.0.0",
  "description": "Example webpage for personal development company.",
  "main": "index.js",
  "scripts": {
    "start": "browser-sync start --server --files src/css/*.css *.html src/js/*.js",
    "test:html": "nu-html-checker index.html",

    "watch:sass": "node-sass -rw src/sass -o src/css/",
    "watch:autoprefixer": "autoprefixer-cli src/css/main.css"
  },
  "author": "Jakub Folta",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "nu-html-checker": "^0.1.0"
  }
}
